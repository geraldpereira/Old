<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE beans PUBLIC "-//JBOSS//DTD BEAN//EN" "http://www.jboss.org/j2ee/dtd/jboss-web_4_0.dtd">
<jboss-web>
	<security-domain>java:/jaas/BYOBSecurity</security-domain>
    <context-root>/blog</context-root>
	<virtual-host>blog</virtual-host>
	<security-role>
		<role-name>ROLE_USER</role-name>
		<principal-name>ROLE_USER</principal-name>
	</security-role>
	<security-role>
		<role-name>ROLE_ADMIN</role-name>
		<principal-name>ROLE_ADMIN</principal-name>
	</security-role>
	<security-role>
		<role-name>ROLE_GUEST</role-name>
		<principal-name>ROLE_GUEST</principal-name>
	</security-role>
	
</jboss-web>